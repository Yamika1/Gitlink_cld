@model POE_CLOUD1.Models.Order
@{
    ViewData["Title"] = "Edit Order";
}

<h2>Edit Order</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />

    <div class="mb-3">
        <label asp-for="OrderName" class="form-label"></label>
        <input asp-for="OrderName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="OrderType" class="form-label"></label>
        <input asp-for="OrderType" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="OrderStatus" class="form-label"></label>
        <select asp-for="OrderStatus" class="form-select">
            <option>Pending</option>
            <option>Shipped</option>
            <option>Delivered</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentOption" class="form-label"></label>
        <input asp-for="PaymentOption" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <img src="@Model.ImageUrl" class="img-thumbnail" style="max-height:200px;" />
        </div>
    }

    <div class="mb-3">
        <label>Upload New Image</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
