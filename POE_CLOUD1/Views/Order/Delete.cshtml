@model POE_CLOUD1.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">Delete Order</h2>

    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this Order?</strong>
    </div>

    <div class="card p-3 shadow-sm">
        <dl class="row">
            <dt class="col-sm-3">Order Name</dt>
            <dd class="col-sm-9">@Model.OrderName</dd>

            <dt class="col-sm-3">Order Id</dt>
            <dd class="col-sm-9">@Model.OrderId</dd>



            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImageUrl" alt="Order Image" class="img-thumbnail" width="150" />
                </dd>
            }
        </dl>
    </div>

    <form asp-action="DeleteOrder" method="post" class="mt-3">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <input type="hidden" asp-for="ImageUrl" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

