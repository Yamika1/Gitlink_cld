@model IEnumerable<POE_CLOUD1.Models.Order>

@{
    ViewData["Title"] = "Orders Dashboard";
}

<div class="text-center mb-4">
    <h1 class="display-4">Orders Dashboard</h1>
    <p class="lead">This data is retrieved from Azure Table Storage</p>
    <a asp-action="Index" class="btn btn-primary">Refresh</a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<p>
    <a asp-action="AddOrder" class="btn btn-success mb-3">+ Add New Order</a>
</p>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var order in Model.OrderByDescending(o => o.Timestamp))
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(order.ImageUrl))
                    {
                        <img src="@order.ImageUrl" class="card-img-top" alt="@order.OrderName" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@order.OrderName</h5>
                        <p><strong>Type:</strong> @order.OrderType</p>
                        <p>
                            <strong>Status:</strong>
                            <span class="badge @(order.OrderStatus == "Pending" ? "bg-warning text-dark" :
                                                                                    order.OrderStatus == "Shipped" ? "bg-info text-dark" :
                                                                                    order.OrderStatus == "Delivered" ? "bg-success" : "bg-secondary")">
                        @order.OrderStatus
                    </span>
                </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Details" asp-route-partitionKey="@order.PartitionKey" asp-route-rowKey="@order.RowKey" class="btn btn-sm btn-primary">Details</a>
                <a asp-action="Edit" asp-route-partitionKey="@order.PartitionKey" asp-route-rowKey="@order.RowKey" class="btn btn-sm btn-warning">Edit</a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="partitionKey" value="@order.PartitionKey" />
                    <input type="hidden" name="rowKey" value="@order.RowKey" />
                    <input type="hidden" name="imageUrl" value="@order.ImageUrl" />
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this order?')">Delete</button>
                </form>
            </div>
        </div>
    </div>
        }
    </div>
}
else
{
    <p class="fst-italic text-muted">No orders found</p>
}

<!-- ================= FILE SHARE STORAGE ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-secondary text-white">
        File Share Storage
    </div>
    <div class="card-body">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Choose a file to upload:</label>
                <input type="file" name="file" class="form-control" />
                <button type="submit" class="btn btn-primary mt-2">Upload</button>
            </div>
        </form>

        <h5 class="mt-3">Uploaded Files</h5>
        @if (ViewBag.LocalFiles != null && ((List<FileModel>)ViewBag.LocalFiles).Count > 0)
        {
            <ul class="list-group mt-2">
                @foreach (var file in (List<FileModel>)ViewBag.LocalFiles)
                {
                    <li class="list-group-item">
                        @file.Name - Size: @file.DisplaySize - Modified: @file.LastModified?.ToString("g")
                        - <a asp-action="DownloadFile" asp-route-fileName="@file.Name">Download</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="fst-italic text-muted">No files found</p>
        }
    </div>
</div>

<!-- ================= BLOB STORAGE ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white">
        Upload to Blob Storage
    </div>
    <div class="card-body">
        <form asp-action="Upload" asp-controller="Order" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="uploadedFile" class="form-label">Select a file to upload:</label>
                <input type="file" name="uploadedFile" id="uploadedFile" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>

        <h5 class="mt-4">Uploaded Blob Files</h5>
        @if (ViewBag.BlobFiles != null && ((List<string>)ViewBag.BlobFiles).Any())
        {
            <ul class="list-group mt-2">
                @foreach (var blobUrl in (List<string>)ViewBag.BlobFiles)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="@blobUrl" target="_blank" class="text-decoration-none">
                            @System.IO.Path.GetFileName(blobUrl)
                        </a>
                        <span class="text-muted">@blobUrl</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="fst-italic text-muted">No files found in Blob storage.</p>
        }
    </div>
</div>

<!-- ================= QUEUE ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-success text-white">
        Queue Messages
    </div>
    <div class="card-body">
        <form method="post" asp-action="Send">
            <div class="input-group mb-2">
                <input type="text" name="message" class="form-control" placeholder="Type a message..." value="" @(ViewBag.Msg != null ? "disabled" : "") />
                <button type="submit" class="btn btn-success" @(ViewBag.Msg != null ? "disabled" : "")>Send</button>
            </div>
        </form>

        @if (ViewBag.Msg != null)
        {
            <div class="alert alert-info">
                @ViewBag.Msg
            </div>
        }

        <h5>Recent Messages</h5>
        @if (ViewBag.QueueMessages != null && ((List<string>)ViewBag.QueueMessages).Count > 0)
        {
            <ul class="list-group">
                @foreach (var msg in (List<string>)ViewBag.QueueMessages)
                {
                    <li class="list-group-item">@msg</li>
                }
            </ul>
        }
        else
        {
            <p class="fst-italic text-muted">No queue messages</p>
        }
    </div>
</div>