@model POE_CLOUD1.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container py-4">
    <h2 class="mb-4">Customer Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.CustomerFirstName</dd>

                <dt class="col-sm-3">Surname</dt>
                <dd class="col-sm-9">@Model.CustomerSurname</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>


                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>