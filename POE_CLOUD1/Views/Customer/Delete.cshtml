@model POE_CLOUD1.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">Delete Customer</h2>

    <div class="alert alert-warning">
        <strong>Are you sure</strong> you want to delete this customer?
    </div>

    <div class="card p-3 shadow-sm">
        <dl class="row">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.CustomerFirstName</dd>

            <dt class="col-sm-3">Surname</dt>
            <dd class="col-sm-9">@Model.CustomerSurname</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImageUrl" alt="Customer Image" class="img-thumbnail" width="150" />
                </dd>
            }
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <input type="hidden" asp-for="ImageUrl" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


