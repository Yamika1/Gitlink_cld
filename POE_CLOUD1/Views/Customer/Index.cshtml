@model IEnumerable<POE_CLOUD1.Models.Customer>

@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="text-center mb-4">
    <h1 class="display-4">Customer Dashboard</h1>
    <p class="lead">This data is retrieved from Azure Function & Azure Storage</p>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-clockwise"></i> Refresh Data
    </a>
</div>

<div class="container py-4">
    <h2 class="mb-4">Customer List</h2>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }

    <div class="mb-3">
        <a asp-action="AddCustomer" class="btn btn-primary">Add New Customer</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerFirstName</td>
                    <td>@customer.CustomerSurname</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>
                        <a asp-action="Details"
                           asp-route-partitionKey="@customer.PartitionKey"
                           asp-route-rowKey="@customer.RowKey"
                           class="btn btn-info btn-sm">View Details</a>
                        <a asp-action="Edit"
                           asp-route-partitionKey="@customer.PartitionKey"
                           asp-route-rowKey="@customer.RowKey"
                           class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete"
                           asp-route-partitionKey="@customer.PartitionKey"
                           asp-route-rowKey="@customer.RowKey"
                           class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- ================= FILE SHARE STORAGE ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-secondary text-white">
        File Share Storage
    </div>
    <div class="card-body">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Choose a file to upload:</label>
                <input type="file" name="file" class="form-control" />
                <button type="submit" class="btn btn-primary mt-2">Upload</button>
            </div>
        </form>

        <h5 class="mt-3">Uploaded Files</h5>
        @if (ViewBag.LocalFiles != null && ((List<FileModel>)ViewBag.LocalFiles).Any())
        {
            <ul class="list-group mt-2">
                @foreach (var file in (List<FileModel>)ViewBag.LocalFiles)
                {
                    <li class="list-group-item">
                        @file.Name - Size: @file.DisplaySize - Last Modified: @file.LastModified?.ToString("g")
                        - <a asp-action="DownloadFile" asp-route-fileName="@file.Name">Download</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="fst-italic text-muted">No files found in File Share.</p>
        }
    </div>
</div>
<!-- ================= BLOB STORAGE ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white">
        Upload to Blob Storage
    </div>
    <div class="card-body">
        <form asp-action="Upload" asp-controller="Customer" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="uploadedFile" class="form-label">Select a file to upload:</label>
                <input type="file" name="uploadedFile" id="uploadedFile" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>


        <h5 class="mt-4">Uploaded Blob Files</h5>
        @if (ViewBag.BlobFiles != null && ((List<string>)ViewBag.BlobFiles).Any())
        {
            <ul class="list-group mt-2">
                @foreach (var blobUrl in (List<string>)ViewBag.BlobFiles)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="@blobUrl" target="_blank" class="text-decoration-none">
                            @System.IO.Path.GetFileName(blobUrl)
                        </a>
                        <span class="text-muted">@blobUrl</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="fst-italic text-muted">No files found in Blob storage.</p>
        }
    </div>
</div>


<!-- ================= QUEUE MESSAGES ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-success text-white">
        Queue Messages
    </div>
    <div class="card-body">
        <form method="post" asp-action="Send">
            <div class="input-group mb-2">
                <input type="text" name="message" class="form-control" placeholder="Type a message..." value="" @(ViewBag.Msg != null ? "disabled" : "") />
                <button type="submit" class="btn btn-success" @(ViewBag.Msg != null ? "disabled" : "")>Send</button>
            </div>
        </form>

        @if (ViewBag.Msg != null)
        {
            <div class="alert alert-info">
                @ViewBag.Msg
            </div>
        }

        <h5>Recent Messages</h5>
        @if (ViewBag.QueueMessages != null && ((List<string>)ViewBag.QueueMessages).Count > 0)
        {
            <ul class="list-group">
                @foreach (var msg in (List<string>)ViewBag.QueueMessages)
                {
                    <li class="list-group-item">@msg</li>
                }
            </ul>
        }
        else
        {
            <p class="fst-italic text-muted">No queue messages</p>
        }
    </div>
</div>